<h1>New game</h1>

<div class="random-letters">
  <% @letters.each do |letter| %>
    <div class="letter"><%= letter %></div>
  <% end %>
</div>

<br>

<form action="/score" method="POST">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="">What is the longest word you can find?</label>
  <br>
  <input id="grid" name="grid" type="hidden" value="<%= @letters %>"/>
  <input type="text" name="attempt">
  <input type="submit" id="submit" value="Play">
</form>
